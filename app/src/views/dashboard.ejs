<%
  const currencySymbols = { 'KRW': '₩', 'USD': '$', 'EUR': '€', 'JPY': '¥', 'GBP': '£', 'CNY': '¥' };
  function formatInvoiceAmount(amount, currency) {
    const curr = currency || 'KRW';
    const symbol = currencySymbols[curr] || '₩';
    if (curr === 'KRW' || curr === 'JPY') {
      return symbol + new Intl.NumberFormat('ko-KR').format(Math.round(amount));
    }
    return symbol + new Intl.NumberFormat('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }).format(amount);
  }
  function formatProjectName(name) {
    if (!name) return '-';
    return name.replace(/\\n/g, ' ').replace(/\n/g, ' ');
  }
%>
<div class="mb-8">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= t('dashboard.title') %></h1>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4">
    <div class="flex justify-between items-start">
      <div>
        <div class="text-gray-500 dark:text-gray-400 text-sm"><%= t('dashboard.total_invoices') %></div>
        <div class="text-3xl font-bold text-gray-900 dark:text-white"><%= stats.invoices %></div>
      </div>
      <a href="/invoices" class="text-blue-600 dark:text-blue-400 text-sm hover:underline"><%= t('dashboard.view') %> →</a>
    </div>
  </div>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4">
    <div class="flex justify-between items-start">
      <div>
        <div class="text-gray-500 dark:text-gray-400 text-sm"><%= t('dashboard.total_companies') %></div>
        <div class="text-3xl font-bold text-gray-900 dark:text-white"><%= stats.companies %></div>
      </div>
      <a href="/companies" class="text-blue-600 dark:text-blue-400 text-sm hover:underline"><%= t('dashboard.view') %> →</a>
    </div>
  </div>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4">
    <div class="flex justify-between items-start">
      <div>
        <div class="text-gray-500 dark:text-gray-400 text-sm"><%= t('dashboard.total_clients') %></div>
        <div class="text-3xl font-bold text-gray-900 dark:text-white"><%= stats.clients %></div>
      </div>
      <a href="/clients" class="text-blue-600 dark:text-blue-400 text-sm hover:underline"><%= t('dashboard.view') %> →</a>
    </div>
  </div>
</div>

<div class="bg-white dark:bg-gray-800 rounded-lg shadow">
  <div class="px-6 py-4 border-b dark:border-gray-700 flex justify-between items-center">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white"><%= t('dashboard.recent_invoices') %></h2>
    <a href="/invoices/new" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm hover:bg-blue-700">
      <%= t('dashboard.new_invoice') %>
    </a>
  </div>
  <!-- Mobile: Card Layout -->
  <div class="sm:hidden divide-y divide-gray-200 dark:divide-gray-700">
    <% if (stats.recentInvoices.length === 0) { %>
    <div class="px-4 py-4 text-center text-gray-500 dark:text-gray-400 text-sm"><%= t('invoice.no_invoices') %></div>
    <% } else { %>
    <% stats.recentInvoices.forEach(inv => { %>
    <a href="/invoices/<%= inv.id %>" class="block px-4 py-3 hover:bg-gray-50 dark:hover:bg-gray-700">
      <div class="flex justify-between items-start mb-1">
        <span class="text-sm font-medium text-blue-600 dark:text-blue-400 truncate flex-1 mr-2"><%= formatProjectName(inv.project_name) %></span>
        <% if (inv.status === 'draft') { %>
        <span class="px-2 py-0.5 text-xs rounded-full bg-gray-100 dark:bg-gray-600 text-gray-600 dark:text-gray-300 whitespace-nowrap"><%= t('invoice.status_draft') %></span>
        <% } else if (inv.status === 'confirmed') { %>
        <span class="px-2 py-0.5 text-xs rounded-full bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-300 whitespace-nowrap"><%= t('invoice.status_confirmed') %></span>
        <% } else if (inv.status === 'discarded') { %>
        <span class="px-2 py-0.5 text-xs rounded-full bg-red-100 dark:bg-red-900 text-red-600 dark:text-red-300 whitespace-nowrap"><%= t('invoice.status_discarded') %></span>
        <% } else { %>
        <span class="px-2 py-0.5 text-xs rounded-full bg-gray-100 dark:bg-gray-600 text-gray-600 dark:text-gray-300 whitespace-nowrap"><%= inv.status %></span>
        <% } %>
      </div>
      <div class="text-sm font-medium text-gray-900 dark:text-white"><%= formatInvoiceAmount(inv.total_amount, inv.currency) %></div>
    </a>
    <% }) %>
    <% } %>
  </div>

  <!-- Desktop: Table Layout -->
  <div class="hidden sm:block overflow-x-auto">
    <table class="min-w-full">
      <thead class="bg-gray-50 dark:bg-gray-700">
        <tr>
          <th class="px-4 py-3 text-left text-sm font-bold text-gray-700 dark:text-gray-200"><%= t('invoice.project') %></th>
          <th class="px-4 py-3 text-left text-sm font-bold text-gray-700 dark:text-gray-200 hidden lg:table-cell"><%= t('invoice.client') %></th>
          <th class="px-4 py-3 text-right text-sm font-bold text-gray-700 dark:text-gray-200"><%= t('invoice.amount') %></th>
          <th class="px-4 py-3 text-center text-sm font-bold text-gray-700 dark:text-gray-200"><%= t('invoice.status') %></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
        <% if (stats.recentInvoices.length === 0) { %>
        <tr>
          <td colspan="4" class="px-4 py-4 text-center text-sm text-gray-500 dark:text-gray-400"><%= t('invoice.no_invoices') %></td>
        </tr>
        <% } else { %>
        <% stats.recentInvoices.forEach(inv => { %>
        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
          <td class="px-4 py-4 text-sm">
            <a href="/invoices/<%= inv.id %>" class="text-blue-600 dark:text-blue-400 hover:underline font-medium"><%= formatProjectName(inv.project_name) %></a>
          </td>
          <td class="px-4 py-4 text-sm text-gray-700 dark:text-gray-300 hidden lg:table-cell"><%= inv.client_name || '-' %></td>
          <td class="px-4 py-4 text-sm text-right font-medium text-gray-900 dark:text-white"><%= formatInvoiceAmount(inv.total_amount, inv.currency) %></td>
          <td class="px-4 py-4 text-center">
            <% if (inv.status === 'draft') { %>
            <span class="px-2 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-600 text-gray-600 dark:text-gray-300"><%= t('invoice.status_draft') %></span>
            <% } else if (inv.status === 'confirmed') { %>
            <span class="px-2 py-1 text-xs rounded-full bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-300"><%= t('invoice.status_confirmed') %></span>
            <% } else if (inv.status === 'discarded') { %>
            <span class="px-2 py-1 text-xs rounded-full bg-red-100 dark:bg-red-900 text-red-600 dark:text-red-300"><%= t('invoice.status_discarded') %></span>
            <% } else { %>
            <span class="px-2 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-600 text-gray-600 dark:text-gray-300"><%= inv.status %></span>
            <% } %>
          </td>
        </tr>
        <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- Backup & Restore Section -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
  <!-- Backup -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 flex flex-col">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
      <%= t('backup.title') %>
    </h2>
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
      <%= t('backup.description') %>
    </p>
    <div class="mt-auto">
      <button id="btn-backup-full" onclick="downloadBackup('full')"
              class="bg-purple-600 text-white px-4 py-2 rounded-md text-sm hover:bg-purple-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
        <span class="btn-text"><%= t('backup.download_full') %></span>
        <span class="btn-loading hidden"><%= t('common.loading') %></span>
      </button>
      <div id="backup-status" class="mt-3 text-sm min-h-[1.5rem]"></div>
    </div>
  </div>

  <!-- Restore -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 flex flex-col">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
      <%= t('restore.title') %>
    </h2>
    <p class="text-sm text-gray-600 dark:text-gray-400">
      <%= t('restore.description') %>
    </p>
    <p class="text-sm text-orange-600 dark:text-orange-400 mt-1 mb-4">
      <%= t('restore.warning') %>
    </p>
    <div class="mt-auto">
      <form id="form-restore-full" onsubmit="restoreBackup(event, 'full')" class="flex flex-wrap items-center gap-3">
        <input type="file" id="file-restore-full" name="backup" accept=".zip" class="text-sm text-gray-500 dark:text-gray-400 file:mr-2 file:py-2 file:px-3 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-purple-50 file:text-purple-700 dark:file:bg-purple-900 dark:file:text-purple-300 hover:file:bg-purple-100 dark:hover:file:bg-purple-800">
        <button type="submit" id="btn-restore-full" class="bg-purple-600 text-white px-4 py-2 rounded-md text-sm hover:bg-purple-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors whitespace-nowrap">
          <span class="btn-text"><%= t('restore.restore_full') %></span>
          <span class="btn-loading hidden"><%= t('common.loading') %></span>
        </button>
      </form>
      <div id="restore-status" class="mt-3 text-sm min-h-[1.5rem]"></div>
    </div>
  </div>
</div>
