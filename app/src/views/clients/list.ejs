<div class="mb-6 flex justify-between items-center">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= t('client.list') %></h1>
  <a href="/clients/new" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm hover:bg-blue-700">
    <%= t('client.new') %>
  </a>
</div>

<div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full">
      <thead class="bg-gray-50 dark:bg-gray-700">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase"><%= t('client.name') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase hidden sm:table-cell"><%= t('client.contact_person') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase hidden md:table-cell"><%= t('client.phone') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase hidden lg:table-cell"><%= t('client.email') %></th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase"><%= t('common.actions') %></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
        <% if (clients.length === 0) { %>
        <tr>
          <td colspan="5" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400"><%= t('client.no_clients') %></td>
        </tr>
        <% } else { %>
        <% clients.forEach(c => { %>
        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
          <td class="px-6 py-4 font-medium text-gray-900 dark:text-white"><%= c.name %></td>
          <td class="px-6 py-4 text-gray-700 dark:text-gray-300 hidden sm:table-cell"><%= c.contact_person || '-' %></td>
          <td class="px-6 py-4 text-gray-700 dark:text-gray-300 hidden md:table-cell"><%= c.phone || '-' %></td>
          <td class="px-6 py-4 text-gray-700 dark:text-gray-300 hidden lg:table-cell"><%= c.email || '-' %></td>
          <td class="px-6 py-4 text-right space-x-2">
            <a href="/clients/<%= c.id %>/edit" class="text-blue-600 dark:text-blue-400 hover:underline"><%= t('common.edit') %></a>
            <form method="POST" action="/clients/<%= c.id %>/delete" class="inline" onsubmit="return confirm('<%= t('common.confirm_delete') %>')">
              <button type="submit" class="text-red-600 dark:text-red-400 hover:underline ml-2"><%= t('common.delete') %></button>
            </form>
          </td>
        </tr>
        <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
