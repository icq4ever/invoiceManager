<div class="mb-6 flex justify-between items-center">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= t('template.list') %></h1>
  <a href="/templates/new" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm hover:bg-blue-700">
    <%= t('template.new') %>
  </a>
</div>

<div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full">
      <thead class="bg-gray-50 dark:bg-gray-700">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase"><%= t('template.sort_order') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase"><%= t('template.name') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase hidden md:table-cell"><%= t('template.content') %></th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase"><%= t('common.default') %></th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase"><%= t('common.actions') %></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
        <% if (templates.length === 0) { %>
        <tr>
          <td colspan="5" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400"><%= t('template.no_templates') %></td>
        </tr>
        <% } else { %>
        <% templates.forEach(tmpl => { %>
        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
          <td class="px-6 py-4 text-gray-700 dark:text-gray-300"><%= tmpl.sort_order %></td>
          <td class="px-6 py-4 font-medium text-gray-900 dark:text-white"><%= tmpl.title %></td>
          <td class="px-6 py-4 text-gray-600 dark:text-gray-400 truncate max-w-md hidden md:table-cell"><%= tmpl.content %></td>
          <td class="px-6 py-4 text-center">
            <% if (tmpl.is_default) { %>
            <span class="text-green-600 dark:text-green-400">âœ“</span>
            <% } else { %>
            <span class="text-gray-400">-</span>
            <% } %>
          </td>
          <td class="px-6 py-4 text-right space-x-2">
            <a href="/templates/<%= tmpl.id %>/edit" class="text-blue-600 dark:text-blue-400 hover:underline"><%= t('common.edit') %></a>
            <form method="POST" action="/templates/<%= tmpl.id %>/delete" class="inline" onsubmit="return confirm('<%= t('common.confirm_delete') %>')">
              <button type="submit" class="text-red-600 dark:text-red-400 hover:underline ml-2"><%= t('common.delete') %></button>
            </form>
          </td>
        </tr>
        <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<div class="mt-4 text-sm text-gray-600 dark:text-gray-400">
  <p>* <%= t('template.default_note') %></p>
</div>
