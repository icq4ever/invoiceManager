<div class="mb-6 flex justify-between items-center">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= t('template.list') %></h1>
  <a href="/templates/new" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm hover:bg-blue-700">
    <%= t('template.new') %>
  </a>
</div>

<% if (templates.length === 0) { %>
<div class="bg-white dark:bg-gray-800 rounded-lg shadow p-8 text-center">
  <p class="text-gray-500 dark:text-gray-400"><%= t('template.no_templates') %></p>
</div>
<% } else { %>
<div class="space-y-3">
  <% templates.forEach(tmpl => { %>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
    <!-- Title -->
    <div class="px-4 py-3 flex items-center gap-2">
      <h3 class="text-base font-semibold text-gray-900 dark:text-white"><%= tmpl.title %></h3>
      <% if (tmpl.is_default) { %>
      <span class="px-2 py-0.5 text-xs rounded-full bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-300"><%= t('common.default') %></span>
      <% } %>
      <span class="text-xs text-gray-400 dark:text-gray-500 ml-auto">#<%= tmpl.sort_order %></span>
    </div>

    <!-- Content -->
    <div class="px-4 py-3 border-t border-gray-100 dark:border-gray-700">
      <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2"><%= tmpl.content %></p>
    </div>

    <!-- Actions -->
    <div class="px-4 py-2 border-t border-gray-100 dark:border-gray-700 flex justify-end items-center gap-4 text-sm">
      <a href="/templates/<%= tmpl.id %>/edit" class="text-blue-600 dark:text-blue-400 hover:underline"><%= t('common.edit') %></a>
      <button type="button" onclick="if(confirm('<%= t('common.confirm_delete') %>')) document.getElementById('delete-form-<%= tmpl.id %>').submit()" class="text-red-600 dark:text-red-400 hover:underline"><%= t('common.delete') %></button>
      <form id="delete-form-<%= tmpl.id %>" method="POST" action="/templates/<%= tmpl.id %>/delete" class="hidden"></form>
    </div>
  </div>
  <% }) %>
</div>
<% } %>

<div class="mt-4 text-sm text-gray-600 dark:text-gray-400">
  <p>* <%= t('template.default_note') %></p>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
