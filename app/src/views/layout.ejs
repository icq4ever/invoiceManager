<!DOCTYPE html>
<html lang="<%= lang %>" class="<%= theme === 'dark' ? 'dark' : '' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : t('app.title') %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
    }
  </script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css" />
  <style>
    body { font-family: 'Pretendard', -apple-system, BlinkMacSystemFont, system-ui, sans-serif; }
  </style>
</head>
<body class="bg-gray-100 dark:bg-gray-900 min-h-screen flex flex-col transition-colors">
  <% if (user) { %>
  <nav class="bg-white dark:bg-gray-800 shadow-sm border-b dark:border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <a href="/dashboard" class="text-xl font-bold text-gray-900 dark:text-white"><%= t('app.name') %></a>
          <span class="ml-2 text-xs px-1.5 py-0.5 bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-300 rounded font-medium">v<%= appVersion %></span>
          <!-- Desktop menu -->
          <div class="hidden md:flex ml-8 space-x-4">
            <a href="/dashboard" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"><%= t('nav.dashboard') %></a>
            <a href="/invoices" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"><%= t('nav.invoices') %></a>
            <a href="/companies" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"><%= t('nav.companies') %></a>
            <a href="/clients" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"><%= t('nav.clients') %></a>
            <a href="/templates" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"><%= t('nav.templates') %></a>
          </div>
        </div>
        <div class="flex items-center space-x-1 sm:space-x-2">
          <!-- Language switcher -->
          <div class="relative" id="langDropdown">
            <button type="button" class="p-2 rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700" onclick="toggleLangMenu()">
              <span class="text-sm font-medium"><%= lang.toUpperCase() %></span>
            </button>
            <div id="langMenu" class="hidden absolute right-0 mt-2 w-24 bg-white dark:bg-gray-800 rounded-md shadow-lg border dark:border-gray-700 z-50">
              <a href="?lang=ko" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 <%= lang === 'ko' ? 'bg-gray-100 dark:bg-gray-700' : '' %>">한국어</a>
              <a href="?lang=en" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 <%= lang === 'en' ? 'bg-gray-100 dark:bg-gray-700' : '' %>">English</a>
            </div>
          </div>
          <!-- Theme toggle -->
          <button type="button" id="themeToggle" class="p-2 rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700" onclick="toggleTheme()">
            <svg id="sunIcon" class="h-5 w-5 <%= theme === 'dark' ? 'hidden' : '' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <svg id="moonIcon" class="h-5 w-5 <%= theme === 'dark' ? '' : 'hidden' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
            </svg>
          </button>
          <span class="hidden sm:inline text-sm text-gray-600 dark:text-gray-400 ml-2"><%= user.username %></span>
          <a href="/logout" class="hidden md:inline text-sm text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 ml-2"><%= t('nav.logout') %></a>
          <!-- Mobile menu button -->
          <button type="button" id="mobileMenuBtn" class="md:hidden p-2 rounded-md text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
    <!-- Mobile menu -->
    <div id="mobileMenu" class="hidden md:hidden border-t dark:border-gray-700 bg-white dark:bg-gray-800">
      <div class="px-4 py-3 space-y-1">
        <a href="/dashboard" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"><%= t('nav.dashboard') %></a>
        <a href="/invoices" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"><%= t('nav.invoices') %></a>
        <a href="/companies" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"><%= t('nav.companies') %></a>
        <a href="/clients" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"><%= t('nav.clients') %></a>
        <a href="/templates" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700"><%= t('nav.templates') %></a>
        <div class="border-t dark:border-gray-700 pt-2 mt-2">
          <a href="/logout" class="block px-3 py-2 rounded-md text-base font-medium text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700"><%= t('nav.logout') %></a>
        </div>
      </div>
    </div>
  </nav>
  <script>
    document.getElementById('mobileMenuBtn').addEventListener('click', function() {
      document.getElementById('mobileMenu').classList.toggle('hidden');
    });

    function toggleLangMenu() {
      document.getElementById('langMenu').classList.toggle('hidden');
    }

    // Close lang menu when clicking outside
    document.addEventListener('click', function(e) {
      const dropdown = document.getElementById('langDropdown');
      const menu = document.getElementById('langMenu');
      if (!dropdown.contains(e.target)) {
        menu.classList.add('hidden');
      }
    });

    function toggleTheme() {
      const html = document.documentElement;
      const isDark = html.classList.contains('dark');

      if (isDark) {
        html.classList.remove('dark');
        document.cookie = 'theme=light;path=/;max-age=31536000';
        document.getElementById('sunIcon').classList.remove('hidden');
        document.getElementById('moonIcon').classList.add('hidden');
      } else {
        html.classList.add('dark');
        document.cookie = 'theme=dark;path=/;max-age=31536000';
        document.getElementById('sunIcon').classList.add('hidden');
        document.getElementById('moonIcon').classList.remove('hidden');
      }
    }

    // Tab switching function
    function switchTab(event, tabName) {
      event.preventDefault();

      // Hide all tabs
      document.querySelectorAll('.tab-content').forEach(tab => {
        tab.style.display = 'none';
      });

      // Remove active styling from all buttons
      document.querySelectorAll('.tab-button').forEach(btn => {
        btn.classList.remove('border-blue-600', 'text-blue-600');
        btn.classList.add('border-transparent', 'text-gray-600');
      });

      // Show selected tab
      const selectedTab = document.getElementById(tabName + '-tab');
      if (selectedTab) {
        selectedTab.style.display = 'block';
      }

      // Add active styling to clicked button
      event.target.classList.remove('border-transparent', 'text-gray-600');
      event.target.classList.add('border-blue-600', 'text-blue-600');
    }
  </script>
  <% } %>

  <main class="flex-grow max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="mt-auto py-6 border-t dark:border-gray-700 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
      <div>Invoice Manager v<%= appVersion %></div>
      <div class="flex items-center gap-4">
        <a href="https://github.com/icq4ever/invoiceManager" target="_blank" rel="noopener noreferrer" class="hover:text-gray-700 dark:hover:text-gray-300 flex items-center gap-1">
          <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
          GitHub
        </a>
        <a href="https://github.com/icq4ever/invoiceManager/issues" target="_blank" rel="noopener noreferrer" class="hover:text-gray-700 dark:hover:text-gray-300 flex items-center gap-1">
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
          Bug Report
        </a>
      </div>
    </div>
  </footer>

  <% if (typeof scripts !== 'undefined') { %>
    <%- scripts %>
  <% } %>

  <script>
    // i18n messages for JavaScript
    var i18n = {
      backup: {
        downloadStarted: '<%= typeof t === "function" ? t("backup.success_database").replace(/'/g, "\\'") : "Download started" %>'
      },
      restore: {
        selectFile: '<%= typeof t === "function" ? t("restore.error_no_file").replace(/'/g, "\\'") : "Please select a file first" %>',
        confirm: '<%= typeof t === "function" ? t("restore.confirm").replace(/'/g, "\\'") : "Are you sure you want to restore?" %>',
        failed: '<%= typeof t === "function" ? t("restore.error_failed").replace(/'/g, "\\'") : "Restore failed" %>'
      }
    };

    // Backup download function (global)
    function downloadBackup(type) {
      var btn = document.getElementById('btn-backup-' + type);
      if (!btn) return;

      var btnText = btn.querySelector('.btn-text');
      var btnLoading = btn.querySelector('.btn-loading');
      var statusEl = document.getElementById('backup-status');

      // Show loading state
      if (btnText) btnText.classList.add('hidden');
      if (btnLoading) btnLoading.classList.remove('hidden');
      btn.disabled = true;
      if (statusEl) statusEl.innerHTML = '';

      // Trigger download
      window.location.href = '/backup/download/' + type;

      // Reset button after delay
      setTimeout(function() {
        if (btnText) btnText.classList.remove('hidden');
        if (btnLoading) btnLoading.classList.add('hidden');
        btn.disabled = false;
        if (statusEl) {
          statusEl.innerHTML = '<span class="text-green-600 dark:text-green-400">✓ ' + i18n.backup.downloadStarted + '</span>';
          setTimeout(function() { statusEl.innerHTML = ''; }, 3000);
        }
      }, 1500);
    }

    // Restore backup function (global)
    function restoreBackup(event, type) {
      event.preventDefault();

      var fileInput = document.getElementById('file-restore-' + type);
      var btn = document.getElementById('btn-restore-' + type);
      var statusEl = document.getElementById('restore-status');

      if (!fileInput || !fileInput.files || fileInput.files.length === 0) {
        if (statusEl) {
          statusEl.innerHTML = '<span class="text-red-600 dark:text-red-400">' + i18n.restore.selectFile + '</span>';
        }
        return;
      }

      // Confirm restore
      if (!confirm(i18n.restore.confirm)) {
        return;
      }

      var btnText = btn.querySelector('.btn-text');
      var btnLoading = btn.querySelector('.btn-loading');

      // Show loading state
      if (btnText) btnText.classList.add('hidden');
      if (btnLoading) btnLoading.classList.remove('hidden');
      btn.disabled = true;
      if (statusEl) statusEl.innerHTML = '';

      // Create FormData and send
      var formData = new FormData();
      formData.append('backup', fileInput.files[0]);

      fetch('/backup/restore/' + type, {
        method: 'POST',
        body: formData
      })
      .then(function(response) {
        return response.json();
      })
      .then(function(data) {
        if (btnText) btnText.classList.remove('hidden');
        if (btnLoading) btnLoading.classList.add('hidden');
        btn.disabled = false;
        fileInput.value = '';

        if (data.success) {
          if (statusEl) {
            statusEl.innerHTML = '<span class="text-green-600 dark:text-green-400">✓ ' + data.message + '</span>';
          }
          // Reload page after database restore
          if (type === 'database' || type === 'full') {
            setTimeout(function() { window.location.reload(); }, 2000);
          }
        } else {
          if (statusEl) {
            statusEl.innerHTML = '<span class="text-red-600 dark:text-red-400">✗ ' + (data.error || i18n.restore.failed) + '</span>';
          }
        }
      })
      .catch(function(err) {
        console.error('Restore error:', err);
        if (btnText) btnText.classList.remove('hidden');
        if (btnLoading) btnLoading.classList.add('hidden');
        btn.disabled = false;
        if (statusEl) {
          statusEl.innerHTML = '<span class="text-red-600 dark:text-red-400">✗ ' + i18n.restore.failed + '</span>';
        }
      });
    }
  </script>
</body>
</html>
