<!DOCTYPE html>
<html lang="<%= lang %>" class="<%= theme === 'dark' ? 'dark' : '' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= invoice.id ? t('invoice.edit') : t('invoice.new') %> - <%= t('app.title') %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = { darkMode: 'class' }
  </script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css" />
  <style>
    body { font-family: 'Pretendard', -apple-system, BlinkMacSystemFont, system-ui, sans-serif; }
  </style>
</head>
<body class="bg-gray-100 dark:bg-gray-900 min-h-screen flex flex-col transition-colors">
  <nav class="sticky top-0 z-50 bg-white dark:bg-gray-800 shadow-sm border-b dark:border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:h-16 sm:items-center py-2 sm:py-0 gap-1 sm:gap-0">
        <!-- Row 1: Title + Controls -->
        <div class="flex justify-between items-center w-full sm:w-auto">
          <div class="flex items-center">
            <a href="/dashboard" class="text-xl font-bold text-gray-900 dark:text-white"><%= t('app.name') %></a>
            <span class="ml-2 text-xs px-1.5 py-0.5 bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-300 rounded font-medium">v<%= appVersion %></span>
            <a href="/invoices" class="hidden sm:inline ml-8 px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">← <%= t('invoice.list') %></a>
          </div>
          <div class="flex items-center space-x-1 sm:space-x-2">
            <div class="relative" id="langDropdown">
              <button type="button" class="p-2 rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700" onclick="toggleLangMenu()">
                <span class="text-sm font-medium"><%= lang.toUpperCase() %></span>
              </button>
              <div id="langMenu" class="hidden absolute right-0 mt-2 w-24 bg-white dark:bg-gray-800 rounded-md shadow-lg border dark:border-gray-700 z-50">
                <a href="?lang=ko" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">한국어</a>
                <a href="?lang=en" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">English</a>
              </div>
            </div>
            <button type="button" class="p-2 rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700" onclick="toggleTheme()">
              <svg id="sunIcon" class="h-5 w-5 <%= theme === 'dark' ? 'hidden' : '' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              <svg id="moonIcon" class="h-5 w-5 <%= theme === 'dark' ? '' : 'hidden' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
            </button>
            <% if (user) { %><span class="hidden sm:inline text-sm text-gray-600 dark:text-gray-400 ml-2"><%= user.username %></span><% } %>
            <a href="/logout" class="hidden sm:inline text-sm text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 ml-2"><%= t('nav.logout') %></a>
          </div>
        </div>
        <!-- Mobile Row 2: Back link -->
        <a href="/invoices" class="sm:hidden text-xs text-gray-600 dark:text-gray-400">← <%= t('invoice.list') %></a>
      </div>
    </div>
  </nav>

  <main class="flex-grow max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= invoice.id ? t('invoice.edit') : t('invoice.new') %></h1>
    </div>

    <% if (error) { %>
    <div class="bg-red-100 dark:bg-red-900 border border-red-400 dark:border-red-700 text-red-700 dark:text-red-300 px-4 py-3 rounded mb-4"><%= error %></div>
    <% } %>

    <form method="POST" action="<%= invoice.id ? '/invoices/' + invoice.id : '/invoices' %>" id="invoiceForm">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-3 sm:p-4 mb-4">
        <h2 class="text-base font-semibold mb-3 text-gray-900 dark:text-white"><%= t('invoice.title') %></h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
          <div>
            <label class="block text-xs text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.number') %></label>
            <input type="text" name="invoice_number" value="<%= invoice.invoice_number %>" readonly
              class="w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white">
          </div>
          <div>
            <label class="block text-xs text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.date') %> *</label>
            <input type="date" name="issue_date" required value="<%= invoice.issue_date %>"
              class="w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500">
          </div>
          <div>
            <label class="block text-xs text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.validity') %></label>
            <input type="text" name="validity_period" value="<%= invoice.validity_period || t('invoice.validity_default') %>"
              class="w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500">
          </div>
          <div>
            <label class="block text-xs text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.tax_rate') %> (%)</label>
            <input type="number" name="tax_rate" value="<%= invoice.tax_rate || 10 %>" min="0" max="100" step="0.1"
              class="w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500">
          </div>
          <div>
            <label class="block text-xs text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.company') %></label>
            <select name="company_id" class="w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500">
              <option value="">-</option>
              <% companies.forEach(c => { %>
              <option value="<%= c.id %>" <%= invoice.company_id == c.id ? 'selected' : '' %>><%= c.name %><%= c.is_default ? ` (${t('common.default')})` : '' %></option>
              <% }); %>
            </select>
          </div>
          <div>
            <label class="block text-xs text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.recipient') %></label>
            <select name="client_id" class="w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500">
              <option value="">-</option>
              <% clients.forEach(c => { %>
              <option value="<%= c.id %>" <%= invoice.client_id == c.id ? 'selected' : '' %>><%= c.name %></option>
              <% }); %>
            </select>
          </div>
          <div>
            <label class="block text-xs text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.currency') %></label>
            <select name="currency" id="currencySelect" class="w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500">
              <option value="KRW" <%= (invoice.currency || 'KRW') === 'KRW' ? 'selected' : '' %>><%= t('invoice.currency_krw') %></option>
              <option value="USD" <%= invoice.currency === 'USD' ? 'selected' : '' %>><%= t('invoice.currency_usd') %></option>
              <option value="EUR" <%= invoice.currency === 'EUR' ? 'selected' : '' %>><%= t('invoice.currency_eur') %></option>
              <option value="JPY" <%= invoice.currency === 'JPY' ? 'selected' : '' %>><%= t('invoice.currency_jpy') %></option>
              <option value="GBP" <%= invoice.currency === 'GBP' ? 'selected' : '' %>><%= t('invoice.currency_gbp') %></option>
              <option value="CNY" <%= invoice.currency === 'CNY' ? 'selected' : '' %>><%= t('invoice.currency_cny') %></option>
            </select>
          </div>
          <div class="col-span-2 md:col-span-1">
            <label class="block text-xs text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.project_name') %></label>
            <input type="text" name="project_name" id="projectNameInput" value="<%= invoice.project_name || '' %>"
              class="w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500" placeholder="(Shift+Enter)">
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-3 sm:p-6 mb-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white"><%= t('invoice.items') %></h2>
          <button type="button" id="addItem" class="bg-green-600 text-white px-3 py-1 rounded text-sm hover:bg-green-700">
            + <%= t('invoice.add_item') %>
          </button>
        </div>

        <div id="itemsContainer">
          <% if (items && items.length > 0) { %>
            <% items.forEach((item, index) => { %>
            <div class="item-row border dark:border-gray-600 rounded-lg p-2 sm:p-4 mb-4 bg-gray-50 dark:bg-gray-700" data-index="<%= index %>">
              <div class="flex justify-between items-start mb-3">
                <span class="text-sm font-medium text-gray-500 dark:text-gray-400"><%= t('invoice.item_title') %> #<span class="item-number"><%= index + 1 %></span></span>
                <button type="button" class="remove-item text-red-600 dark:text-red-400 hover:text-red-800 text-sm"><%= t('common.delete') %></button>
              </div>

              <!-- Item Title -->
              <div class="mb-3">
                <label class="block text-sm text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.item_title') %> *</label>
                <input type="text" name="item_titles" required value="<%= item.title %>"
                  class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-600 text-gray-900 dark:text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
              </div>

              <!-- Mode Selection -->
              <div class="mb-3 flex items-center gap-4">
                <label class="inline-flex items-center cursor-pointer">
                  <input type="radio" name="item_detail_modes_<%= index %>" value="text" class="detail-mode-radio" <%= (item.detail_mode || 'text') === 'text' ? 'checked' : '' %>>
                  <span class="ml-2 text-sm text-gray-700 dark:text-gray-300"><%= t('invoice.detail_mode_text') %></span>
                </label>
                <label class="inline-flex items-center cursor-pointer">
                  <input type="radio" name="item_detail_modes_<%= index %>" value="itemized" class="detail-mode-radio" <%= item.detail_mode === 'itemized' ? 'checked' : '' %>>
                  <span class="ml-2 text-sm text-gray-700 dark:text-gray-300"><%= t('invoice.detail_mode_itemized') %></span>
                </label>
                <input type="hidden" name="item_detail_modes" value="<%= item.detail_mode || 'text' %>" class="detail-mode-hidden">
              </div>

              <!-- Text Mode (Option A) -->
              <div class="text-mode-section <%= item.detail_mode === 'itemized' ? 'hidden' : '' %>">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-3">
                  <div>
                    <label class="block text-sm text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.quantity') %></label>
                    <input type="number" name="item_quantities" value="<%= item.quantity %>" min="0" step="0.01"
                      class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-600 text-gray-900 dark:text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 item-quantity">
                  </div>
                  <div>
                    <label class="block text-sm text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.unit_price') %></label>
                    <input type="number" name="item_unit_prices" value="<%= item.unit_price %>" min="0" step="1"
                      class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-600 text-gray-900 dark:text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 item-price">
                  </div>
                  <div>
                    <label class="block text-sm text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.supply_amount') %></label>
                    <div class="px-3 py-2 bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-600 rounded-md text-sm text-gray-900 dark:text-white item-amount font-medium">
                      ₩<%= new Intl.NumberFormat('ko-KR').format(item.amount) %>
                    </div>
                  </div>
                </div>
                <div>
                  <label class="block text-sm text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.item_details') %></label>
                  <textarea name="item_details" rows="3"
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-600 text-gray-900 dark:text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"><%= item.details %></textarea>
                </div>
              </div>

              <!-- Itemized Mode (Option B) -->
              <div class="itemized-mode-section <%= item.detail_mode !== 'itemized' ? 'hidden' : '' %>">
                <div class="sub-items-container border dark:border-gray-500 rounded-md overflow-hidden">
                  <!-- Desktop header -->
                  <div class="hidden sm:grid grid-cols-12 gap-2 bg-gray-200 dark:bg-gray-600 px-3 py-2 text-xs font-medium text-gray-700 dark:text-gray-300">
                    <div class="col-span-2">타이틀</div>
                    <div class="col-span-4">내역</div>
                    <div class="col-span-2 text-center">수량</div>
                    <div class="col-span-2 text-right">단가</div>
                    <div class="col-span-2 text-right">금액</div>
                  </div>
                  <div class="sub-items-list">
                    <% if (item.subItems && item.subItems.length > 0) { %>
                      <% item.subItems.forEach((sub, subIndex) => { %>
                      <div class="sub-item-row flex flex-wrap sm:grid sm:grid-cols-12 gap-2 p-2 sm:px-3 sm:py-2 border-b dark:border-gray-600 items-center">
                        <input type="text" name="sub_titles_<%= index %>[]" value="<%= sub.title || '' %>" placeholder="타이틀"
                          class="w-full sm:col-span-2 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white font-medium placeholder:font-bold sub-title">
                        <input type="text" name="sub_descriptions_<%= index %>[]" value="<%= sub.description %>" placeholder="내역"
                          class="w-full sm:col-span-4 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder:font-normal sub-description">
                        <div class="flex w-full sm:contents gap-2">
                          <input type="number" name="sub_quantities_<%= index %>[]" value="<%= sub.quantity %>" min="0" step="0.01"
                            class="w-20 sm:w-full sm:col-span-2 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-sm text-center bg-white dark:bg-gray-700 text-gray-900 dark:text-white sub-quantity">
                          <input type="number" name="sub_prices_<%= index %>[]" value="<%= sub.unit_price %>" min="0" step="1"
                            class="flex-1 min-w-0 sm:w-full sm:col-span-2 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-sm text-right bg-white dark:bg-gray-700 text-gray-900 dark:text-white sub-price">
                        </div>
                        <div class="flex w-full sm:contents justify-end gap-2 items-center">
                          <span class="px-2 py-0.5 bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded text-sm font-medium sm:col-span-1 sub-amount"><%= ({KRW:'₩',USD:'$',EUR:'€',JPY:'¥',GBP:'£',CNY:'¥'})[invoice.currency||'KRW'] %><%= new Intl.NumberFormat('ko-KR').format(sub.amount) %></span>
                          <button type="button" class="remove-sub-item text-red-500 hover:text-red-700 sm:col-span-1 sm:text-right">×</button>
                        </div>
                      </div>
                      <% }); %>
                    <% } %>
                  </div>
                  <div class="px-3 py-2 border-t dark:border-gray-600">
                    <button type="button" class="add-sub-item text-blue-600 dark:text-blue-400 hover:text-blue-800 text-sm">+ <%= t('invoice.add_sub_item') %></button>
                  </div>
                </div>
                <div class="flex justify-end mt-2">
                  <div class="text-sm">
                    <span class="text-gray-600 dark:text-gray-400"><%= t('invoice.sub_total') %>:</span>
                    <span class="font-medium text-gray-900 dark:text-white ml-2 item-amount">₩<%= new Intl.NumberFormat('ko-KR').format(item.amount) %></span>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
          <% } %>
        </div>

        <div class="border-t dark:border-gray-600 pt-3 mt-3">
          <div class="flex justify-end">
            <div class="w-48 space-y-1 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-400"><%= t('invoice.subtotal') %></span>
                <span id="subtotal" class="font-medium text-gray-900 dark:text-white">₩0</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-400"><%= t('invoice.tax') %> (<span id="taxRateDisplay">10</span>%)</span>
                <span id="taxAmount" class="font-medium text-gray-900 dark:text-white">₩0</span>
              </div>
              <div class="flex justify-between text-base border-t dark:border-gray-600 pt-1">
                <span class="font-semibold text-gray-900 dark:text-white"><%= t('invoice.total') %></span>
                <span id="totalAmount" class="font-bold text-blue-600 dark:text-blue-400">₩0</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-3 sm:p-4 mb-4">
        <div class="flex justify-between items-center mb-3">
          <h2 class="text-base font-semibold text-gray-900 dark:text-white"><%= t('invoice.notes_title') %></h2>
          <button type="button" id="addNote" class="bg-gray-600 text-white px-2 py-1 rounded text-xs hover:bg-gray-700">
            + <%= t('invoice.add_note') %>
          </button>
        </div>

        <div class="mb-3">
          <label class="block text-xs text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.select_template') %></label>
          <select id="templateSelect" class="w-full px-2 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-1 focus:ring-blue-500">
            <option value=""><%= t('invoice.select_template') %></option>
            <% templates.forEach(tmpl => { %>
            <option value="<%= tmpl.content %>"><%= tmpl.title %></option>
            <% }); %>
          </select>
        </div>

        <div id="notesContainer">
          <%
            let notes = [];
            try {
              notes = JSON.parse(invoice.notes || '[]');
            } catch(e) {
              notes = invoice.notes ? [invoice.notes] : [];
            }
          %>
          <% notes.forEach((note, index) => { %>
          <div class="note-row flex items-start gap-1 mb-1">
            <span class="text-xs text-gray-500 dark:text-gray-400 mt-1.5 w-4"><%= index + 1 %>.</span>
            <input type="text" class="note-input flex-1 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white text-sm focus:outline-none focus:ring-1 focus:ring-blue-500" value="<%= note %>" placeholder="(Shift+Enter)">
            <button type="button" class="remove-note text-red-600 dark:text-red-400 hover:text-red-800 p-1 text-sm">×</button>
          </div>
          <% }); %>
        </div>

        <input type="hidden" name="notes" id="notesInput" value="<%= invoice.notes %>">
      </div>

      <div class="flex justify-end space-x-2">
        <a href="/invoices" class="px-4 py-1.5 text-sm border border-gray-300 dark:border-gray-600 rounded text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700"><%= t('common.cancel') %></a>
        <button type="submit" class="px-4 py-1.5 text-sm bg-blue-600 text-white rounded hover:bg-blue-700"><%= t('common.save') %></button>
      </div>
    </form>
  </main>

  <!-- Footer -->
  <footer class="mt-auto py-6 border-t dark:border-gray-700 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
      <div>InvoiceManager v<%= appVersion %></div>
      <div class="flex items-center gap-4">
        <a href="https://github.com/icq4ever/invoiceManager" target="_blank" rel="noopener noreferrer" class="hover:text-gray-700 dark:hover:text-gray-300 flex items-center gap-1">
          <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
          </svg>
          GitHub
        </a>
        <a href="https://github.com/icq4ever/invoiceManager/issues" target="_blank" rel="noopener noreferrer" class="hover:text-gray-700 dark:hover:text-gray-300 flex items-center gap-1">
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
          Bug Report
        </a>
      </div>
    </div>
  </footer>

  <script>
    function toggleLangMenu() {
      document.getElementById('langMenu').classList.toggle('hidden');
    }

    document.addEventListener('click', function(e) {
      const dropdown = document.getElementById('langDropdown');
      const menu = document.getElementById('langMenu');
      if (!dropdown.contains(e.target)) {
        menu.classList.add('hidden');
      }
    });

    function toggleTheme() {
      const html = document.documentElement;
      const isDark = html.classList.contains('dark');
      if (isDark) {
        html.classList.remove('dark');
        document.cookie = 'theme=light;path=/;max-age=31536000';
        document.getElementById('sunIcon').classList.remove('hidden');
        document.getElementById('moonIcon').classList.add('hidden');
      } else {
        html.classList.add('dark');
        document.cookie = 'theme=dark;path=/;max-age=31536000';
        document.getElementById('sunIcon').classList.add('hidden');
        document.getElementById('moonIcon').classList.remove('hidden');
      }
    }

    // Item template
    let itemCounter = <%= items ? items.length : 0 %>;
    function getItemTemplate(index) {
      return `
      <div class="item-row border dark:border-gray-600 rounded-lg p-2 sm:p-4 mb-4 bg-gray-50 dark:bg-gray-700" data-index="${index}">
        <div class="flex justify-between items-start mb-3">
          <span class="text-sm font-medium text-gray-500 dark:text-gray-400"><%= t('invoice.item_title') %> #<span class="item-number">1</span></span>
          <button type="button" class="remove-item text-red-600 dark:text-red-400 hover:text-red-800 text-sm"><%= t('common.delete') %></button>
        </div>

        <!-- Item Title -->
        <div class="mb-3">
          <label class="block text-sm text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.item_title') %> *</label>
          <input type="text" name="item_titles" required
            class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-600 text-gray-900 dark:text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <!-- Mode Selection -->
        <div class="mb-3 flex items-center gap-4">
          <label class="inline-flex items-center cursor-pointer">
            <input type="radio" name="item_detail_modes_${index}" value="text" class="detail-mode-radio" checked>
            <span class="ml-2 text-sm text-gray-700 dark:text-gray-300"><%= t('invoice.detail_mode_text') %></span>
          </label>
          <label class="inline-flex items-center cursor-pointer">
            <input type="radio" name="item_detail_modes_${index}" value="itemized" class="detail-mode-radio">
            <span class="ml-2 text-sm text-gray-700 dark:text-gray-300"><%= t('invoice.detail_mode_itemized') %></span>
          </label>
          <input type="hidden" name="item_detail_modes" value="text" class="detail-mode-hidden">
        </div>

        <!-- Text Mode (Option A) -->
        <div class="text-mode-section">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-3">
            <div>
              <label class="block text-sm text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.quantity') %></label>
              <input type="number" name="item_quantities" value="1" min="0" step="0.01"
                class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-600 text-gray-900 dark:text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 item-quantity">
            </div>
            <div>
              <label class="block text-sm text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.unit_price') %></label>
              <input type="number" name="item_unit_prices" value="0" min="0" step="1"
                class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-600 text-gray-900 dark:text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 item-price">
            </div>
            <div>
              <label class="block text-sm text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.supply_amount') %></label>
              <div class="px-3 py-2 bg-white dark:bg-gray-600 border border-gray-300 dark:border-gray-600 rounded-md text-sm text-gray-900 dark:text-white item-amount font-medium">₩0</div>
            </div>
          </div>
          <div>
            <label class="block text-sm text-gray-600 dark:text-gray-400 mb-1"><%= t('invoice.item_details') %></label>
            <textarea name="item_details" rows="3"
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-600 text-gray-900 dark:text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
          </div>
        </div>

        <!-- Itemized Mode (Option B) -->
        <div class="itemized-mode-section hidden">
          <div class="sub-items-container border dark:border-gray-500 rounded-md overflow-hidden">
            <div class="hidden sm:grid grid-cols-12 gap-2 bg-gray-200 dark:bg-gray-600 px-3 py-2 text-xs font-medium text-gray-700 dark:text-gray-300">
              <div class="col-span-2">타이틀</div>
              <div class="col-span-4">내역</div>
              <div class="col-span-2 text-center">수량</div>
              <div class="col-span-2 text-right">단가</div>
              <div class="col-span-2 text-right">금액</div>
            </div>
            <div class="sub-items-list"></div>
            <div class="px-3 py-2 border-t dark:border-gray-600">
              <button type="button" class="add-sub-item text-blue-600 dark:text-blue-400 hover:text-blue-800 text-sm">+ <%= t('invoice.add_sub_item') %></button>
            </div>
          </div>
          <div class="flex justify-end mt-2">
            <div class="text-sm">
              <span class="text-gray-600 dark:text-gray-400"><%= t('invoice.sub_total') %>:</span>
              <span class="font-medium text-gray-900 dark:text-white ml-2 item-amount">₩0</span>
            </div>
          </div>
        </div>
      </div>
    `;
    }

    function getSubItemTemplate(itemIndex) {
      return `
        <div class="sub-item-row flex flex-wrap sm:grid sm:grid-cols-12 gap-2 p-2 sm:px-3 sm:py-2 border-b dark:border-gray-600 items-center">
          <input type="text" name="sub_titles_${itemIndex}[]" value="" placeholder="타이틀"
            class="w-full sm:col-span-2 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white font-medium placeholder:font-bold sub-title">
          <input type="text" name="sub_descriptions_${itemIndex}[]" value="" placeholder="내역"
            class="w-full sm:col-span-4 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder:font-normal sub-description">
          <div class="flex w-full sm:contents gap-2">
            <input type="number" name="sub_quantities_${itemIndex}[]" value="1" min="0" step="0.01"
              class="w-20 sm:w-full sm:col-span-2 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-sm text-center bg-white dark:bg-gray-700 text-gray-900 dark:text-white sub-quantity">
            <input type="number" name="sub_prices_${itemIndex}[]" value="0" min="0" step="1"
              class="flex-1 min-w-0 sm:w-full sm:col-span-2 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-sm text-right bg-white dark:bg-gray-700 text-gray-900 dark:text-white sub-price">
          </div>
          <div class="flex w-full sm:contents justify-end gap-2 items-center">
            <span class="px-2 py-0.5 bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded text-sm font-medium sm:col-span-1 sub-amount">${getCurrencySymbol()}0</span>
            <button type="button" class="remove-sub-item text-red-500 hover:text-red-700 sm:col-span-1 sm:text-right">×</button>
          </div>
        </div>
      `;
    }

    // Add item
    document.getElementById('addItem').addEventListener('click', () => {
      const container = document.getElementById('itemsContainer');
      container.insertAdjacentHTML('beforeend', getItemTemplate(itemCounter));
      itemCounter++;
      updateItemNumbers();
      attachItemListeners();
      calculateTotals();
    });

    // Remove item
    function attachItemListeners() {
      document.querySelectorAll('.remove-item').forEach(btn => {
        btn.onclick = function() {
          this.closest('.item-row').remove();
          updateItemNumbers();
          calculateTotals();
        };
      });

      document.querySelectorAll('.item-quantity, .item-price').forEach(input => {
        input.oninput = calculateTotals;
      });

      // Mode switching
      document.querySelectorAll('.detail-mode-radio').forEach(radio => {
        radio.onchange = function() {
          const itemRow = this.closest('.item-row');
          const mode = this.value;
          const textSection = itemRow.querySelector('.text-mode-section');
          const itemizedSection = itemRow.querySelector('.itemized-mode-section');
          const hiddenInput = itemRow.querySelector('.detail-mode-hidden');

          hiddenInput.value = mode;

          if (mode === 'text') {
            textSection.classList.remove('hidden');
            itemizedSection.classList.add('hidden');
          } else {
            textSection.classList.add('hidden');
            itemizedSection.classList.remove('hidden');
            // Add initial sub-item if empty
            const subList = itemizedSection.querySelector('.sub-items-list');
            if (subList.children.length === 0) {
              const index = itemRow.dataset.index;
              subList.insertAdjacentHTML('beforeend', getSubItemTemplate(index));
              attachSubItemListeners(itemRow);
            }
          }
          calculateTotals();
        };
      });

      // Add sub-item buttons
      document.querySelectorAll('.add-sub-item').forEach(btn => {
        btn.onclick = function() {
          const itemRow = this.closest('.item-row');
          const index = itemRow.dataset.index;
          const subList = itemRow.querySelector('.sub-items-list');
          subList.insertAdjacentHTML('beforeend', getSubItemTemplate(index));
          attachSubItemListeners(itemRow);
          calculateTotals();
        };
      });

      // Attach sub-item listeners to existing items
      document.querySelectorAll('.item-row').forEach(row => {
        attachSubItemListeners(row);
      });
    }

    function attachSubItemListeners(itemRow) {
      // Remove sub-item
      itemRow.querySelectorAll('.remove-sub-item').forEach(btn => {
        btn.onclick = function() {
          this.closest('.sub-item-row').remove();
          calculateTotals();
        };
      });

      // Sub-item input changes
      itemRow.querySelectorAll('.sub-quantity, .sub-price').forEach(input => {
        input.oninput = calculateTotals;
      });
    }

    // Update item numbers
    function updateItemNumbers() {
      document.querySelectorAll('.item-number').forEach((el, i) => {
        el.textContent = i + 1;
      });
    }

    // Currency symbols
    const currencySymbols = {
      'KRW': '₩',
      'USD': '$',
      'EUR': '€',
      'JPY': '¥',
      'GBP': '£',
      'CNY': '¥'
    };

    function getCurrencySymbol() {
      const currency = document.getElementById('currencySelect').value || 'KRW';
      return currencySymbols[currency] || '₩';
    }

    function formatCurrency(amount) {
      const symbol = getCurrencySymbol();
      const currency = document.getElementById('currencySelect').value || 'KRW';
      if (currency === 'KRW' || currency === 'JPY') {
        return symbol + Math.round(amount).toLocaleString('ko-KR');
      }
      return symbol + amount.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    }

    // Calculate totals
    function calculateTotals() {
      let subtotal = 0;
      document.querySelectorAll('.item-row').forEach(row => {
        const mode = row.querySelector('.detail-mode-hidden').value;
        let itemAmount = 0;

        if (mode === 'itemized') {
          // Calculate from sub-items
          row.querySelectorAll('.sub-item-row').forEach(subRow => {
            const qty = parseFloat(subRow.querySelector('.sub-quantity').value) || 0;
            const price = parseFloat(subRow.querySelector('.sub-price').value) || 0;
            const subAmount = qty * price;
            subRow.querySelector('.sub-amount').textContent = formatCurrency(subAmount);
            itemAmount += subAmount;
          });
        } else {
          // Text mode - calculate from quantity * unit_price
          const qty = parseFloat(row.querySelector('.item-quantity').value) || 0;
          const price = parseFloat(row.querySelector('.item-price').value) || 0;
          itemAmount = qty * price;
        }

        subtotal += itemAmount;
        // Update all item-amount displays in this row
        row.querySelectorAll('.item-amount').forEach(el => {
          el.textContent = formatCurrency(itemAmount);
        });
      });

      const taxRate = parseFloat(document.querySelector('[name="tax_rate"]').value) || 10;
      const taxAmount = subtotal * taxRate / 100;
      const total = subtotal + taxAmount;

      document.getElementById('subtotal').textContent = formatCurrency(subtotal);
      document.getElementById('taxRateDisplay').textContent = taxRate;
      document.getElementById('taxAmount').textContent = formatCurrency(taxAmount);
      document.getElementById('totalAmount').textContent = formatCurrency(total);
    }

    // Notes
    function updateNotesInput() {
      const notes = [];
      document.querySelectorAll('.note-input').forEach(input => {
        if (input.value.trim()) notes.push(input.value.trim());
      });
      document.getElementById('notesInput').value = JSON.stringify(notes);
      updateNoteNumbers();
    }

    function updateNoteNumbers() {
      document.querySelectorAll('.note-row').forEach((row, i) => {
        row.querySelector('span').textContent = (i + 1) + '.';
      });
    }

    document.getElementById('addNote').addEventListener('click', () => {
      const container = document.getElementById('notesContainer');
      const num = container.querySelectorAll('.note-row').length + 1;
      container.insertAdjacentHTML('beforeend', `
        <div class="note-row flex items-start gap-1 mb-1">
          <span class="text-xs text-gray-500 dark:text-gray-400 mt-1.5 w-4">${num}.</span>
          <input type="text" class="note-input flex-1 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white text-sm focus:outline-none focus:ring-1 focus:ring-blue-500" value="" placeholder="(Shift+Enter)">
          <button type="button" class="remove-note text-red-600 dark:text-red-400 hover:text-red-800 p-1 text-sm">×</button>
        </div>
      `);
      attachNoteListeners();
    });

    document.getElementById('templateSelect').addEventListener('change', function() {
      if (this.value) {
        const container = document.getElementById('notesContainer');
        const num = container.querySelectorAll('.note-row').length + 1;
        container.insertAdjacentHTML('beforeend', `
          <div class="note-row flex items-start gap-1 mb-1">
            <span class="text-xs text-gray-500 dark:text-gray-400 mt-1.5 w-4">${num}.</span>
            <input type="text" class="note-input flex-1 px-2 py-1 border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white text-sm focus:outline-none focus:ring-1 focus:ring-blue-500" value="${this.value}" placeholder="(Shift+Enter)">
            <button type="button" class="remove-note text-red-600 dark:text-red-400 hover:text-red-800 p-1 text-sm">×</button>
          </div>
        `);
        attachNoteListeners();
        this.value = '';
      }
    });

    function attachNoteListeners() {
      document.querySelectorAll('.remove-note').forEach(btn => {
        btn.onclick = function() {
          this.closest('.note-row').remove();
          updateNoteNumbers();
        };
      });
      document.querySelectorAll('.note-input').forEach(input => {
        input.oninput = updateNotesInput;
        input.addEventListener('keydown', function(e) {
          if (e.shiftKey && e.key === 'Enter') {
            e.preventDefault();
            const start = this.selectionStart;
            const end = this.selectionEnd;
            const value = this.value;
            this.value = value.substring(0, start) + '\\n' + value.substring(end);
            this.selectionStart = this.selectionEnd = start + 2;
            updateNotesInput();
          }
        });
      });
    }

    // Handle Shift+Enter for project name
    document.getElementById('projectNameInput').addEventListener('keydown', function(e) {
      if (e.shiftKey && e.key === 'Enter') {
        e.preventDefault();
        const start = this.selectionStart;
        const end = this.selectionEnd;
        const value = this.value;
        this.value = value.substring(0, start) + '\\n' + value.substring(end);
        this.selectionStart = this.selectionEnd = start + 2;
      }
    });

    // Tax rate change
    document.querySelector('[name="tax_rate"]').addEventListener('input', calculateTotals);

    // Currency change
    document.getElementById('currencySelect').addEventListener('change', calculateTotals);

    // Form submit
    document.getElementById('invoiceForm').addEventListener('submit', function() {
      updateNotesInput();
    });

    // Initialize
    attachItemListeners();
    attachNoteListeners();
    calculateTotals();
  </script>
</body>
</html>
