<!DOCTYPE html>
<html lang="<%= lang %>" class="<%= theme === 'dark' ? 'dark' : '' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= t('invoice.title') %> <%= invoice.invoice_number %> - <%= t('app.title') %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = { darkMode: 'class' }
  </script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css" />
  <style>
    body { font-family: 'Pretendard', -apple-system, BlinkMacSystemFont, system-ui, sans-serif; }
    .invoice-content { font-size: 11px; line-height: 1.4; }
    .invoice-content table { border-collapse: collapse; }
    .invoice-content td, .invoice-content th { vertical-align: top; }
    /* Mobile zoom for invoice preview */
    @media (max-width: 639px) {
      .invoice-scale-container {
        overflow: hidden;
      }
      .invoice-wrapper {
        transform-origin: top left;
        transform: scale(var(--invoice-scale, 1));
        min-width: 900px; /* Force PDF-like width */
        width: 900px;
      }
    }
    @media print {
      .no-print { display: none !important; }
      html, body {
        background: white !important;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
        font-size: 11px;
        width: 100% !important;
        max-width: 100% !important;
        margin: 0 !important;
        padding: 0 !important;
      }
      main {
        max-width: none !important;
        padding: 10mm 0 0 0 !important;
        margin: 0 auto !important;
        width: 100% !important;
      }
      .invoice-wrapper {
        padding: 0 8mm !important;
        box-shadow: none !important;
        border-radius: 0 !important;
        width: 100% !important;
        min-width: auto !important;
        max-width: none !important;
        box-sizing: border-box !important;
        transform: none !important;
      }
      .invoice-scale-container {
        overflow: visible !important;
        height: auto !important;
      }
      .invoice-content {
        width: 100% !important;
        padding: 0 !important;
        margin: 0 !important;
      }
      * {
        color: black !important;
        background: transparent !important;
      }
      .text-blue-600 { color: #2563eb !important; }
      .project-title { font-size: 24px !important; font-weight: 300 !important; overflow-wrap: break-word !important; word-break: keep-all !important; line-height: 1.2 !important; }
      tr { border-color: #000 !important; }
      .border-b { border-bottom: 1px solid #000 !important; }
      tr.border-gray-300, td.border-gray-300 { border-bottom: 1px solid #ccc !important; }
      
      .top-section {
        display: flex !important;
        gap: 12rem !important;
        flex-wrap: nowrap !important;
        width: 100% !important;
        box-sizing: border-box !important;
        margin-bottom: 0 !important;
        align-items: flex-end !important;
      }
      .top-section > div:first-child {
        flex: 1 !important;
        min-width: 0 !important;
        box-sizing: border-box !important;
      }
      .supplier-box {
        page-break-inside: avoid;
        flex: 0 0 auto !important;
        width: 45% !important;
        min-width: auto !important;
        max-width: none !important;
      }
      .summary-section {
        width: 100% !important;
        margin: 0 !important;
      }
      .summary-section table {
        width: 100% !important;
      }
      .summary-section table tr:last-child td {
        font-size: inherit !important;
      }
      .summary-section table tr:first-child {
        border-bottom: 1px solid #ccc !important;
      }
      
      .summary-section table tr:last-child {
        border-top: 2px solid #000 !important;
      }
      
      @page {
        size: A4;
        margin: 5mm;
      }
      .invoice-content {
        display: flex !important;
        flex-direction: column !important;
        min-height: calc(297mm - 30mm) !important; /* A4 height minus margins */
      }
      .notes-section {
        margin-top: auto !important;
        border-top-color: #000 !important;
      }
      .resize-handle { display: none !important; }
    }
    /* Summary section styles (screen) */
    .summary-section table tr:first-child {
      border-bottom: 1px solid #d1d5db;
    }
    .summary-section table tr:nth-child(2) {
      border-bottom: 1px solid #d1d5db;
    }
    .summary-section table tr:last-child {
      border-top: 2px solid #1f2937;
    }
    .dark .summary-section table tr:first-child,
    .dark .summary-section table tr:nth-child(2) {
      border-bottom: 1px solid #4b5563;
    }
    .dark .summary-section table tr:last-child {
      border-top: 2px solid #d1d5db;
    }
    /* Column resize handles */
    .resizable-th {
      position: relative;
    }
    .resize-handle {
      position: absolute;
      right: 0;
      top: 0;
      bottom: 0;
      width: 5px;
      cursor: col-resize;
      background: transparent;
    }
    .resize-handle:hover,
    .resize-handle.resizing {
      background: rgba(59, 130, 246, 0.5);
    }
    #itemsTable {
      table-layout: fixed;
    }
    #itemsTable td {
      overflow: hidden;
      text-overflow: ellipsis;
    }
  </style>
  <%
    const currencySymbols = { 'KRW': '₩', 'USD': '$', 'EUR': '€', 'JPY': '¥', 'GBP': '£', 'CNY': '¥' };
    const currency = invoice.currency || 'KRW';
    const currencySymbol = currencySymbols[currency] || '₩';
    function formatAmount(amount) {
      if (currency === 'KRW' || currency === 'JPY') {
        return currencySymbol + new Intl.NumberFormat('ko-KR').format(Math.round(amount));
      }
      return currencySymbol + new Intl.NumberFormat('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }).format(amount);
    }
  %>
</head>
<body class="bg-gray-100 dark:bg-gray-900 min-h-screen flex flex-col transition-colors">
  <nav class="sticky top-0 z-50 bg-white dark:bg-gray-800 shadow-sm border-b dark:border-gray-700 no-print">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:h-16 sm:items-center py-2 sm:py-0 gap-1 sm:gap-0">
        <!-- Row 1: Title + Controls -->
        <div class="flex justify-between items-center w-full sm:w-auto">
          <div class="flex items-center">
            <a href="/dashboard" class="text-xl font-bold text-gray-900 dark:text-white"><%= t('app.name') %></a>
            <span class="ml-2 text-xs px-1.5 py-0.5 bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-300 rounded font-medium">v<%= appVersion %></span>
            <a href="/invoices" class="hidden sm:inline ml-8 px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">← <%= t('invoice.list') %></a>
          </div>
          <div class="flex items-center space-x-1 sm:space-x-2">
            <div class="relative" id="langDropdown">
              <button type="button" class="p-2 rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700" onclick="toggleLangMenu()">
                <span class="text-sm font-medium"><%= lang.toUpperCase() %></span>
              </button>
              <div id="langMenu" class="hidden absolute right-0 mt-2 w-24 bg-white dark:bg-gray-800 rounded-md shadow-lg border dark:border-gray-700 z-50">
                <a href="?lang=ko" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">한국어</a>
                <a href="?lang=en" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">English</a>
              </div>
            </div>
            <button type="button" class="p-2 rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700" onclick="toggleTheme()">
              <svg id="sunIcon" class="h-5 w-5 <%= theme === 'dark' ? 'hidden' : '' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              <svg id="moonIcon" class="h-5 w-5 <%= theme === 'dark' ? '' : 'hidden' %>" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
            </button>
            <% if (user) { %><span class="hidden sm:inline text-sm text-gray-600 dark:text-gray-400 ml-2"><%= user.username %></span><% } %>
            <a href="/logout" class="hidden sm:inline text-sm text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 ml-2"><%= t('nav.logout') %></a>
          </div>
        </div>
        <!-- Mobile Row 2: Back link -->
        <a href="/invoices" class="sm:hidden text-xs text-gray-600 dark:text-gray-400">← <%= t('invoice.list') %></a>
      </div>
    </div>
  </nav>

  <main class="flex-grow max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6 w-full">
    <!-- Toolbar above invoice -->
    <div class="flex justify-between items-center gap-2 mb-4 no-print">
      <!-- Left: Print/PDF -->
      <button onclick="window.print()" class="bg-green-600 text-white px-3 py-1.5 sm:px-4 sm:py-2 rounded-md text-xs sm:text-sm hover:bg-green-700"><%= t('invoice.print') %> / PDF</button>
      <!-- Right: Edit/Duplicate -->
      <div class="flex items-center gap-1.5 sm:gap-2">
        <a href="/invoices/<%= invoice.id %>/edit" class="bg-blue-600 text-white px-3 py-1.5 sm:px-4 sm:py-2 rounded-md text-xs sm:text-sm hover:bg-blue-700"><%= t('common.edit') %></a>
        <form action="/invoices/<%= invoice.id %>/duplicate" method="POST" class="inline">
          <button type="submit" class="bg-purple-600 text-white px-3 py-1.5 sm:px-4 sm:py-2 rounded-md text-xs sm:text-sm hover:bg-purple-700"><%= t('invoice.duplicate') %></button>
        </form>
      </div>
    </div>
    <!-- Display options -->
    <div class="flex flex-wrap items-center gap-1.5 mb-4 no-print">
      <label class="flex items-center space-x-1 sm:space-x-1.5 px-1.5 py-1 rounded bg-gray-100 dark:bg-gray-700 cursor-pointer text-xs sm:text-sm">
        <input type="checkbox" id="showStampCheckbox" <%= invoice.show_stamp !== 0 ? 'checked' : '' %> onchange="saveDisplayOptions()" class="rounded">
        <span class="text-gray-700 dark:text-gray-300"><%= t('invoice.show_stamp') %></span>
      </label>
      <label class="flex items-center space-x-1 sm:space-x-1.5 px-1.5 py-1 rounded bg-gray-100 dark:bg-gray-700 cursor-pointer text-xs sm:text-sm">
        <input type="checkbox" id="showWebsiteCheckbox" <%= invoice.show_website !== 0 ? 'checked' : '' %> onchange="saveDisplayOptions()" class="rounded">
        <span class="text-gray-700 dark:text-gray-300"><%= t('company.website') %></span>
      </label>
      <label class="flex items-center space-x-1 sm:space-x-1.5 px-1.5 py-1 rounded bg-gray-100 dark:bg-gray-700 cursor-pointer text-xs sm:text-sm">
        <input type="checkbox" id="showFaxCheckbox" <%= invoice.show_fax !== 0 ? 'checked' : '' %> onchange="saveDisplayOptions()" class="rounded">
        <span class="text-gray-700 dark:text-gray-300"><%= t('company.fax') %></span>
      </label>
      <label class="flex items-center space-x-1 sm:space-x-1.5 px-1.5 py-1 rounded bg-gray-100 dark:bg-gray-700 cursor-pointer text-xs sm:text-sm">
        <input type="checkbox" id="showBankInfoCheckbox" <%= invoice.show_bank_info !== 0 ? 'checked' : '' %> onchange="saveDisplayOptions()" class="rounded">
        <span class="text-gray-700 dark:text-gray-300"><%= t('company.bank_info') %></span>
      </label>
    </div>
    <div class="invoice-scale-container overflow-hidden">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 invoice-wrapper">
        <div class="invoice-content text-gray-900 dark:text-white">
        <!-- Header with Logo -->
        <div class="pb-4 flex justify-between items-start">
          <h1 class="text-2xl font-bold"><%= t('invoice.title') %></h1>
          <% if (invoice.logo_path) { %>
          <img src="<%= invoice.logo_path %>" alt="Company Logo" class="h-8 max-w-xs object-contain">
          <% } %>
        </div>

        <!-- Top section: Project/Client + Supplier -->
        <div class="flex gap-48 mb-4 items-end top-section">
          <!-- Left: Project & Client -->
          <div class="flex-1">
            <% if (invoice.project_name) { %>
            <h2 class="project-title text-2xl font-light mb-3" style="word-break: keep-all; overflow-wrap: break-word; line-height: 1.2; white-space: pre-wrap;"><%= (invoice.project_name || '').replace(/\\n/g, '\n') %></h2>
            <% } %>
            <table class="w-full" style="border-collapse: collapse;">
              <tr style="border-top: 1px solid #d1d5db; border-bottom: 1px solid #d1d5db;">
                <td class="font-bold text-gray-600 dark:text-gray-400 py-0.5 whitespace-nowrap" style="width: 30%;"><%= t('invoice.recipient') %></td>
                <td class="py-0.5 pl-3"><%= invoice.client_name || '-' %></td>
              </tr>
              <tr style="border-bottom: 1px solid #d1d5db;">
                <td class="font-bold text-gray-600 dark:text-gray-400 py-0.5 whitespace-nowrap" style="width: 30%;"><%= t('invoice.date') %></td>
                <td class="py-0.5 pl-3">
                  <%
                    const issueDate = invoice.issue_date ? new Date(invoice.issue_date) : null;
                    let formattedDate = '-';
                    if (issueDate) {
                      if (lang === 'en') {
                        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                        formattedDate = `${months[issueDate.getMonth()]} ${issueDate.getDate()}, ${issueDate.getFullYear()}`;
                      } else {
                        formattedDate = `${issueDate.getFullYear()}년 ${issueDate.getMonth() + 1}월 ${issueDate.getDate()}일`;
                      }
                    }
                  %>
                  <%= formattedDate %>
                </td>
              </tr>
              <tr style="border-bottom: 1px solid #d1d5db;">
                <td class="font-bold text-gray-600 dark:text-gray-400 py-0.5 whitespace-nowrap" style="width: 30%;"><%= t('invoice.validity') %></td>
                <td class="py-0.5 pl-3"><%= invoice.validity_period || '-' %></td>
              </tr>
            </table>
          </div>

          <!-- Right: Supplier/Company -->
          <div class="supplier-box" style="width: auto; min-width: 40%; max-width: 50%; flex-shrink: 0; position: relative;">
            <div class="font-bold text-gray-600 dark:text-gray-400 pb-1" style="font-size: 13px; font-weight: 800;"><%= t('invoice.supplier') %></div>
            <% if (invoice.stamp_path) { %>
            <img id="stampImage" src="<%= invoice.stamp_path %>" alt="Signature" style="position: absolute; right: 0; top: 8px; height: 50px; width: auto; object-fit: contain; z-index: 10; <%= invoice.show_stamp === 0 ? 'display: none;' : '' %>">
            <% } %>
            <table class="w-full" style="border-collapse: collapse;">
              <tr style="border-top: 1px solid #d1d5db; border-bottom: 1px solid #d1d5db;">
                <td class="font-bold text-gray-600 dark:text-gray-400 py-0.5 whitespace-nowrap" style="width: 30%;"><%= t('company.name') %></td>
                <td class="py-0.5 pl-3"><%= lang === 'en' ? (invoice.company_name_en || invoice.company_name || '-') : (invoice.company_name || '-') %></td>
                <td class="font-bold text-gray-600 dark:text-gray-400 py-0.5 whitespace-nowrap pl-2" style="width: 15%;"><%= t('company.representative') %></td>
                <td class="py-0.5 text-right" style="vertical-align: middle;">
                  <span><%= lang === 'en' ? (invoice.representative_en || invoice.representative || '-') : (invoice.representative || '-') %></span>
                  <span style="font-size: 12px; color: #999; margin-left: 8px;"><%= t('company.stamp_mark') %></span>
                </td>
              </tr>
              <tr style="border-bottom: 1px solid #d1d5db;">
                <td class="font-bold text-gray-600 dark:text-gray-400 py-0.5 whitespace-nowrap"><%= t('company.business_number') %></td>
                <td class="py-0.5 pl-3" colspan="3"><%= invoice.company_business_number || '-' %></td>
              </tr>
              <tr style="border-bottom: 1px solid #d1d5db;">
                <td class="font-bold text-gray-600 dark:text-gray-400 py-0.5 whitespace-nowrap"><%= t('company.address') %></td>
                <td class="py-0.5 pl-3" colspan="3" style="white-space: pre-wrap;"><%= lang === 'en' ? ((invoice.company_address_en || invoice.company_address || '-').replace(/\\n/g, '\n')) : ((invoice.company_address || '-').replace(/\\n/g, '\n')) %></td>
              </tr>
              <tr style="border-bottom: 1px solid #d1d5db;">
                <td class="font-bold text-gray-600 dark:text-gray-400 py-0.5 whitespace-nowrap"><%= t('company.phone') %></td>
                <td class="py-0.5 pl-3" colspan="3"><%= lang === 'en' ? (invoice.company_phone_en || invoice.company_phone || '-') : (invoice.company_phone || '-') %></td>
              </tr>
              <tr id="websiteRow" style="border-bottom: 1px solid #d1d5db; <%= invoice.show_website === 0 ? 'display: none;' : '' %>">
                <td class="font-bold text-gray-600 dark:text-gray-400 py-0.5 whitespace-nowrap"><%= t('company.website') %></td>
                <td class="py-0.5 pl-3" colspan="3"><%= invoice.company_website || '-' %></td>
              </tr>
              <tr style="border-bottom: 1px solid #d1d5db;">
                <td class="font-bold text-gray-600 dark:text-gray-400 py-0.5 whitespace-nowrap"><%= t('company.email') %></td>
                <td class="py-0.5 pl-3" colspan="3"><%= lang === 'en' ? (invoice.company_email_en || invoice.company_email || '-') : (invoice.company_email || '-') %></td>
              </tr>
              <tr id="faxRow" style="border-bottom: 1px solid #d1d5db; <%= invoice.show_fax === 0 ? 'display: none;' : '' %>">
                <td class="font-bold text-gray-600 dark:text-gray-400 py-0.5 whitespace-nowrap"><%= t('company.fax') %></td>
                <td class="py-0.5 pl-3" colspan="3"><%= invoice.company_fax || '-' %></td>
              </tr>
              <tr id="bankInfoRow" style="border-bottom: 1px solid #d1d5db; <%= invoice.show_bank_info === 0 ? 'display: none;' : '' %>">
                <td class="font-bold text-gray-600 dark:text-gray-400 py-0.5 whitespace-nowrap"><%= t('company.bank_info') %></td>
                <td class="py-0.5 pl-3" colspan="3" style="white-space: pre-wrap;"><%= lang === 'en' ? (invoice.company_bank_info_en || invoice.company_bank_info || '-') : (invoice.company_bank_info || '-') %></td>
              </tr>
            </table>
          </div>
        </div>

        <!-- Total amount -->
        <div class="mt-8 mb-2 flex justify-between items-end border-gray-300 dark:border-gray-600 pb-2">
          <span class="text-xl font-bold"><%= t('invoice.total_amount') %></span>
          <span class="text-2xl font-bold text-blue-600 dark:text-blue-400"><%= formatAmount(invoice.total_amount) %></span>
        </div>

        <!-- Items table -->
        <table id="itemsTable" class="w-full mb-4 table-fixed">
          <thead>
            <tr class="border-t-2 border-b border-gray-800 dark:border-gray-300">
              <th class="py-1.5 text-left font-bold resizable-th" style="width: 12%;"><%= t('invoice.item_title') %><div class="resize-handle"></div></th>
              <th class="py-1.5 text-left font-bold"><%= t('invoice.item_details') %></th>
              <th class="py-1.5 text-center font-bold resizable-th" style="width: 5%;"><%= t('invoice.quantity') %><div class="resize-handle"></div></th>
              <th class="py-1.5 text-right font-bold resizable-th" style="width: 10%;"><%= t('invoice.unit_price') %><div class="resize-handle"></div></th>
              <th class="py-1.5 text-right font-bold resizable-th" style="width: 18%;"><%= t('invoice.supply_amount') %> (<%= t('invoice.tax_excluded') %>)<div class="resize-handle"></div></th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach((item, itemIndex) => {
               const isLastItem = itemIndex === items.length - 1;
               const lastItemBorder = 'border-b border-gray-800 dark:border-gray-300';
               const normalItemBorder = 'border-b border-gray-800 dark:border-gray-300';
            %>
            <% if (item.detail_mode === 'itemized' && item.subItems && item.subItems.length > 0) { %>
            <!-- Itemized mode: show sub-items -->
            <% for (let si = 0; si < item.subItems.length; si++) {
               const isFirst = si === 0;
               const isLast = si === item.subItems.length - 1;
               const subBorder = isLast
                 ? (isLastItem ? lastItemBorder : normalItemBorder)
                 : 'border-b border-gray-300 dark:border-gray-600';
            %>
            <tr>
              <% if (isFirst) { %><td class="py-1 font-medium align-top <%= isLastItem ? lastItemBorder : normalItemBorder %>" rowspan="<%= item.subItems.length %>"><%= item.title %></td><% } %>
              <td class="py-1 <%= subBorder %>"><% if (item.subItems[si].title) { %><span class="font-medium"><%= item.subItems[si].title %></span><span class="text-gray-600 dark:text-gray-400"> : <%= item.subItems[si].description %></span><% } else { %><span class="text-gray-600 dark:text-gray-400"><%= item.subItems[si].description %></span><% } %></td>
              <td class="py-1 text-center <%= subBorder %>"><%= item.subItems[si].quantity %></td>
              <td class="py-1 text-right <%= subBorder %>"><%= formatAmount(item.subItems[si].unit_price) %></td>
              <td class="py-1 text-right<%= isFirst ? ' font-medium' : '' %><%= isLast ? ' ' + (isLastItem ? lastItemBorder : normalItemBorder) : '' %>"><%= isFirst ? formatAmount(item.amount) : '' %></td>
            </tr>
            <% } %>
            <% } else { %>
            <!-- Text mode: show details as before -->
            <tr class="<%= isLastItem ? lastItemBorder : normalItemBorder %>">
              <td class="py-1.5 font-medium"><%= item.title %></td>
              <td class="py-1.5 whitespace-pre-line text-gray-600 dark:text-gray-400"><%= item.details %></td>
              <td class="py-1.5 text-center"><%= item.quantity %></td>
              <td class="py-1.5 text-right"><%= formatAmount(item.unit_price) %></td>
              <td class="py-1.5 text-right"><%= formatAmount(item.amount) %></td>
            </tr>
            <% } %>
            <% }); %>
          </tbody>
        </table>

        <!-- Summary -->
        <div class="flex mx-auto justify-end mb-4 summary-section">
          <table style="width: 100%;">
            <tr class="border-b border-gray-300 dark:border-gray-600">
              <td class="py-1 font-bold text-gray-600 dark:text-gray-400"><%= t('invoice.subtotal') %></td>
              <td class="py-1 text-right font-bold"><%= formatAmount(invoice.subtotal) %></td>
            </tr>
            <tr class="border-b border-gray-300 dark:border-gray-600">
              <td class="py-1 font-bold text-gray-600 dark:text-gray-400"><%= t('invoice.tax') %> (<%= invoice.tax_rate %>%)</td>
              <td class="py-1 text-right font-bold"><%= formatAmount(invoice.tax_amount) %></td>
            </tr>
            <tr class="border-t border-gray-800 dark:border-gray-300">
              <td class="py-1 font-bold text-sm"><%= t('invoice.total') %></td>
              <td class="py-1 text-right font-bold text-sm"><%= formatAmount(invoice.total_amount) %></td>
            </tr>
          </table>
        </div>

        <!-- Notes -->
        <%
          let notes = [];
          try {
            notes = JSON.parse(invoice.notes || '[]');
          } catch(e) {
            notes = invoice.notes ? [invoice.notes] : [];
          }
        %>
        <% if (notes.length > 0) { %>
        <div class="mt-16 pt-3 notes-section" style="border-top: 1px solid #d1d5db;">
          <h3 class="font-bold mb-1"><%= t('invoice.notes') %></h3>
          <div class="text-gray-600 dark:text-gray-400 space-y-0.5" style="font-size: 10px; list-style: none;">
            <% notes.forEach((note, i) => { %>
            <div style="display: flex; white-space: pre-wrap; margin-bottom: 2px;">
              <span style="flex-shrink: 0; margin-right: 4px;"><%= i + 1 %>.</span>
              <span style="white-space: pre-wrap;"><%= (note || '').replace(/\\n/g, '\n') %></span>
            </div>
            <% }); %>
          </div>
        </div>
        <% } %>
        </div>
      </div>
    </div>
  </main>

