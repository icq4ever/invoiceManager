  <script>
    function toggleLangMenu() {
      document.getElementById('langMenu').classList.toggle('hidden');
    }
    document.addEventListener('click', function(e) {
      const dropdown = document.getElementById('langDropdown');
      const menu = document.getElementById('langMenu');
      if (!dropdown.contains(e.target)) {
        menu.classList.add('hidden');
      }
    });
    function toggleTheme() {
      const html = document.documentElement;
      const isDark = html.classList.contains('dark');
      if (isDark) {
        html.classList.remove('dark');
        document.cookie = 'theme=light;path=/;max-age=31536000';
        document.getElementById('sunIcon').classList.remove('hidden');
        document.getElementById('moonIcon').classList.add('hidden');
      } else {
        html.classList.add('dark');
        document.cookie = 'theme=dark;path=/;max-age=31536000';
        document.getElementById('sunIcon').classList.add('hidden');
        document.getElementById('moonIcon').classList.remove('hidden');
      }
    }
    const invoiceId = <%= invoice.id %>;

    // Save display options to database
    function saveDisplayOptions() {
      const stampImage = document.getElementById('stampImage');
      const websiteRow = document.getElementById('websiteRow');
      const faxRow = document.getElementById('faxRow');
      const bankInfoRow = document.getElementById('bankInfoRow');

      const showStamp = document.getElementById('showStampCheckbox').checked;
      const showWebsite = document.getElementById('showWebsiteCheckbox').checked;
      const showFax = document.getElementById('showFaxCheckbox').checked;
      const showBankInfo = document.getElementById('showBankInfoCheckbox').checked;

      // Update UI immediately
      if (stampImage) stampImage.style.display = showStamp ? 'inline-block' : 'none';
      if (websiteRow) websiteRow.style.display = showWebsite ? '' : 'none';
      if (faxRow) faxRow.style.display = showFax ? '' : 'none';
      if (bankInfoRow) bankInfoRow.style.display = showBankInfo ? '' : 'none';

      // Get current column widths
      const columnWidths = getColumnWidths();

      // Save to database
      fetch(`/invoices/${invoiceId}/display-options`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          show_stamp: showStamp,
          show_website: showWebsite,
          show_fax: showFax,
          show_bank_info: showBankInfo,
          column_widths: columnWidths
        })
      });
    }

    // Get column widths from table headers
    function getColumnWidths() {
      const table = document.getElementById('itemsTable');
      if (!table) return null;
      const ths = table.querySelectorAll('thead th');
      const widths = [];
      ths.forEach(th => widths.push(th.style.width || ''));
      return widths;
    }

    // Apply saved column widths
    function applyColumnWidths(widths) {
      if (!widths || !widths.length) return;
      const table = document.getElementById('itemsTable');
      if (!table) return;
      const ths = table.querySelectorAll('thead th');
      ths.forEach((th, i) => {
        if (widths[i]) th.style.width = widths[i];
      });
    }

    // Initialize column widths from saved data
    window.addEventListener('DOMContentLoaded', function() {
      <% if (invoice.column_widths) { %>
      try {
        const savedWidths = <%- invoice.column_widths %>;
        applyColumnWidths(savedWidths);
      } catch(e) { console.error('Failed to load column widths:', e); }
      <% } %>
    });

    // Column resize functionality
    (function() {
      const table = document.getElementById('itemsTable');
      if (!table) return;

      const resizeHandles = table.querySelectorAll('.resize-handle');
      let isResizing = false;
      let currentTh = null;
      let startX = 0;
      let startWidth = 0;
      let tableWidth = 0;

      resizeHandles.forEach(handle => {
        handle.addEventListener('mousedown', function(e) {
          e.preventDefault();
          isResizing = true;
          currentTh = this.parentElement;
          startX = e.pageX;
          startWidth = currentTh.offsetWidth;
          tableWidth = table.offsetWidth;
          this.classList.add('resizing');
          document.body.style.cursor = 'col-resize';
          document.body.style.userSelect = 'none';
        });
      });

      document.addEventListener('mousemove', function(e) {
        if (!isResizing || !currentTh) return;

        const diff = e.pageX - startX;
        const newWidth = startWidth + diff;
        const newPercent = (newWidth / tableWidth) * 100;

        // Min 2%, max 50%
        if (newPercent >= 2 && newPercent <= 50) {
          currentTh.style.width = newPercent.toFixed(1) + '%';
        }
      });

      document.addEventListener('mouseup', function() {
        if (isResizing && currentTh) {
          const handle = currentTh.querySelector('.resize-handle');
          if (handle) handle.classList.remove('resizing');
          // Save column widths after resize
          saveDisplayOptions();
        }
        isResizing = false;
        currentTh = null;
        document.body.style.cursor = '';
        document.body.style.userSelect = '';
      });
    })();

    // Mobile invoice zoom - fit invoice to screen width
    (function() {
      const INVOICE_WIDTH = 900; // Fixed PDF-like width in pixels

      function adjustInvoiceScale() {
        const wrapper = document.querySelector('.invoice-wrapper');
        const container = wrapper ? wrapper.parentElement : null;
        if (!wrapper || window.innerWidth >= 640) {
          wrapper && wrapper.style.removeProperty('--invoice-scale');
          container && container.style.removeProperty('height');
          return;
        }
        // Get the container width (viewport - padding)
        const containerWidth = window.innerWidth - 32; // 16px padding on each side
        // Calculate scale based on fixed invoice width
        const scale = containerWidth / INVOICE_WIDTH;
        wrapper.style.setProperty('--invoice-scale', scale.toFixed(3));
        // Adjust container height to match scaled content
        requestAnimationFrame(() => {
          const scaledHeight = wrapper.scrollHeight * scale;
          container.style.height = scaledHeight + 'px';
        });
      }

      // Initial delay to let content render
      setTimeout(adjustInvoiceScale, 100);
      window.addEventListener('resize', adjustInvoiceScale);
      window.addEventListener('load', adjustInvoiceScale);
    })();
  </script>
</body>
