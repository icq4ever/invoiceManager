<%
  const currencySymbols = { 'KRW': '₩', 'USD': '$', 'EUR': '€', 'JPY': '¥', 'GBP': '£', 'CNY': '¥' };
  function formatInvoiceAmount(amount, currency) {
    const curr = currency || 'KRW';
    const symbol = currencySymbols[curr] || '₩';
    if (curr === 'KRW' || curr === 'JPY') {
      return symbol + new Intl.NumberFormat('ko-KR').format(Math.round(amount));
    }
    return symbol + new Intl.NumberFormat('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }).format(amount);
  }
%>
<div class="mb-6 flex justify-between items-center">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= t('invoice.list') %></h1>
  <a href="/invoices/new" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm hover:bg-blue-700">
    <%= t('invoice.new') %>
  </a>
</div>

<div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full">
      <thead class="bg-gray-50 dark:bg-gray-700">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase"><%= t('invoice.number') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase hidden sm:table-cell"><%= t('invoice.project') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase hidden md:table-cell"><%= t('invoice.client') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase hidden lg:table-cell"><%= t('invoice.date') %></th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase"><%= t('invoice.amount') %></th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase"><%= t('invoice.status') %></th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase"><%= t('common.actions') %></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
        <% if (invoices.length === 0) { %>
        <tr>
          <td colspan="7" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400"><%= t('invoice.no_invoices') %></td>
        </tr>
        <% } else { %>
        <% invoices.forEach(inv => { %>
        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
          <td class="px-6 py-4">
            <a href="/invoices/<%= inv.id %>" class="text-blue-600 dark:text-blue-400 hover:underline font-medium"><%= inv.invoice_number %></a>
          </td>
          <td class="px-6 py-4 text-gray-700 dark:text-gray-300 hidden sm:table-cell"><%= inv.project_name || '-' %></td>
          <td class="px-6 py-4 text-gray-700 dark:text-gray-300 hidden md:table-cell"><%= inv.client_name || '-' %></td>
          <td class="px-6 py-4 text-gray-700 dark:text-gray-300 hidden lg:table-cell"><%= inv.issue_date || '-' %></td>
          <td class="px-6 py-4 text-right font-medium text-gray-900 dark:text-white"><%= formatInvoiceAmount(inv.total_amount, inv.currency) %></td>
          <td class="px-6 py-4 text-center">
            <% if (inv.status === 'draft') { %>
            <span class="px-2 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-600 text-gray-600 dark:text-gray-300"><%= t('invoice.status_draft') %></span>
            <% } else if (inv.status === 'sent') { %>
            <span class="px-2 py-1 text-xs rounded-full bg-blue-100 dark:bg-blue-900 text-blue-600 dark:text-blue-300"><%= t('invoice.status_sent') %></span>
            <% } else if (inv.status === 'accepted') { %>
            <span class="px-2 py-1 text-xs rounded-full bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-300"><%= t('invoice.status_accepted') %></span>
            <% } else { %>
            <span class="px-2 py-1 text-xs rounded-full bg-red-100 dark:bg-red-900 text-red-600 dark:text-red-300"><%= t('invoice.status_rejected') %></span>
            <% } %>
          </td>
          <td class="px-6 py-4 text-right">
            <div class="grid grid-cols-2 gap-x-4 gap-y-1 w-fit justify-end ml-auto">
              <a href="/invoices/<%= inv.id %>" class="text-green-600 dark:text-green-400 hover:underline text-sm"><%= t('invoice.print') %></a>
              <a href="/invoices/<%= inv.id %>/edit" class="text-blue-600 dark:text-blue-400 hover:underline text-sm"><%= t('common.edit') %></a>
              <form method="POST" action="/invoices/<%= inv.id %>/duplicate">
                <button type="submit" class="text-purple-600 dark:text-purple-400 hover:underline text-sm"><%= t('invoice.duplicate') %></button>
              </form>
              <form method="POST" action="/invoices/<%= inv.id %>/delete" onsubmit="return confirm('<%= t('common.confirm_delete') %>')">
                <button type="submit" class="text-red-600 dark:text-red-400 hover:underline text-sm"><%= t('common.delete') %></button>
              </form>
            </div>
          </td>
        </tr>
        <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
