<script>
(function() {
  const searchInput = document.getElementById('invoiceSearch');
  const clearBtn = document.getElementById('clearSearch');
  const rows = document.querySelectorAll('.invoice-row');
  const noInvoicesRow = document.getElementById('noInvoicesRow');
  const noResultsRow = document.getElementById('noResultsRow');

  function filterInvoices() {
    const query = searchInput.value.toLowerCase().trim();
    let visibleCount = 0;

    clearBtn.classList.toggle('hidden', !query);

    rows.forEach(row => {
      const project = row.dataset.project || '';
      const client = row.dataset.client || '';
      const match = !query || project.includes(query) || client.includes(query);
      row.classList.toggle('hidden', !match);
      if (match) visibleCount++;
    });

    noInvoicesRow.classList.add('hidden');
    noResultsRow.classList.toggle('hidden', visibleCount > 0 || rows.length === 0);
    if (rows.length === 0 && !query) {
      noInvoicesRow.classList.remove('hidden');
    }
  }

  searchInput.addEventListener('input', filterInvoices);
  clearBtn.addEventListener('click', () => {
    searchInput.value = '';
    filterInvoices();
    searchInput.focus();
  });
})();
</script>
<% } %>

<script>
(function() {
  var statusLabels = {
    draft: '<%- t("invoice.status_draft") %>',
    confirmed: '<%- t("invoice.status_confirmed") %>',
    discarded: '<%- t("invoice.status_discarded") %>'
  };

  var statusClasses = {
    draft: 'status-btn px-2 py-1 text-xs rounded-full cursor-pointer transition-colors bg-gray-100 dark:bg-gray-600 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-500',
    confirmed: 'status-btn px-2 py-1 text-xs rounded-full cursor-pointer transition-colors bg-green-100 dark:bg-green-900 text-green-600 dark:text-green-300 hover:bg-green-200 dark:hover:bg-green-800',
    discarded: 'status-btn px-2 py-1 text-xs rounded-full cursor-pointer transition-colors bg-red-100 dark:bg-red-900 text-red-600 dark:text-red-300 hover:bg-red-200 dark:hover:bg-red-800'
  };

  // Close all dropdowns
  function closeAllMenus() {
    document.querySelectorAll('.status-menu').forEach(function(menu) {
      menu.classList.add('hidden');
    });
  }

  // Toggle dropdown menu
  document.addEventListener('click', function(e) {
    var statusBtn = e.target.closest('[data-status-btn]');
    if (statusBtn) {
      e.stopPropagation();
      var menu = statusBtn.nextElementSibling;
      var isOpen = !menu.classList.contains('hidden');
      closeAllMenus();
      if (!isOpen) {
        menu.classList.remove('hidden');
      }
      return;
    }

    // Handle status selection
    var setStatusBtn = e.target.closest('[data-set-status]');
    if (setStatusBtn) {
      var newStatus = setStatusBtn.dataset.setStatus;
      var invoiceId = setStatusBtn.dataset.invoiceId;
      var dropdown = setStatusBtn.closest('.status-dropdown');
      var btn = dropdown.querySelector('[data-status-btn]');
      var row = dropdown.closest('tr');

      fetch('/invoices/' + invoiceId + '/set-status', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ status: newStatus })
      })
        .then(function(res) { return res.json(); })
        .then(function(data) {
          if (data.success) {
            btn.dataset.status = data.status;
            btn.textContent = statusLabels[data.status];
            btn.className = statusClasses[data.status];

            // Update edit link visibility
            var editLink = row.querySelector('.edit-link');
            if (editLink) {
              if (data.status === 'confirmed' || data.status === 'discarded') {
                editLink.className = 'edit-link text-sm text-gray-400 dark:text-gray-500 cursor-not-allowed pointer-events-none';
              } else {
                editLink.className = 'edit-link text-sm text-blue-600 dark:text-blue-400 hover:underline';
              }
            }
          }
        })
        .catch(function(err) {
          console.error('Failed to set status:', err);
        });

      closeAllMenus();
      return;
    }

    // Close menus when clicking outside
    closeAllMenus();
  });
})();
</script>
